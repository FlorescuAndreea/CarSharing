<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.carsharing.antisergiu.main.MyProfile"
    android:background="@drawable/road_background"
    android:id="@+id/myProfile">


   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_centerHorizontal="true"
       android:layout_centerVertical="true">
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:paddingRight="20dp">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:textSize="25dp"
                   android:text="Name"
                   android:padding="10dp"
                   android:textColor="@android:color/holo_blue_dark"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:padding="10dp"
                   android:textSize="25dp"
                   android:text="Telephone"

                   android:textColor="@android:color/holo_blue_dark"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:textSize="25dp"
                   android:text="Smoking"
                   android:padding="10dp"
                   android:textColor="@android:color/holo_blue_dark"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:textSize="25dp"
                   android:text="Music"
                   android:padding="10dp"
                   android:textColor="@android:color/holo_blue_dark"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:textSize="25dp"
                   android:text="Car"
                   android:padding="10dp"
                   android:textColor="@android:color/holo_blue_dark"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:textSize="25dp"
                   android:text="Rating"
                   android:padding="10dp"
                   android:textColor="@android:color/holo_blue_dark"/>
               </LinearLayout>

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical">
               <EditText
                   android:layout_width="wrap_content"
                   android:minWidth="200dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:id="@+id/profileName"
                   android:textSize="20dp"
                   android:text=""
                   />
               <EditText
                   android:layout_width="wrap_content"
                   android:minWidth="200dp"
                   android:layout_marginTop="10dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:textSize="20dp"
                   android:id="@+id/profileTelephone"
                   android:text=""
                   />

               <Switch
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/profileSmokingSwitch"
                   android:checked="false"
                   android:textOn="YES"
                   android:textOff="NO"
                   android:background="#000000"
                   android:layout_marginTop="23dp"/>
               <Switch
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/profileMusicSwitch"
                   android:checked="false"
                   android:textOn="YES"
                   android:textOff="NO"
                   android:background="#000000"
                   android:layout_marginTop="30dp"/>
               <EditText
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Logan"
                   android:textSize="20dp"
                   android:id="@+id/profileCarType"
                   android:layout_marginTop="10dp"
                   android:minWidth="200dp"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="25dp"
                   android:text="10"
                   android:id="@+id/profileRating"
                   android:textSize="20dp"/>
           </LinearLayout>

           </LinearLayout>
       <Button
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:background="@android:color/holo_green_dark"
           android:layout_marginTop="20dp"
           android:textColor="@android:color/white"
           android:text="Save"/>
       </LinearLayout>

</RelativeLayout>
