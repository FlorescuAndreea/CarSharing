<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp"
    >

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="350dp"

        android:name="com.google.android.gms.maps.MapFragment"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The distance to the destination is:"
               />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/show_route_distance"/>



            </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The duration of the trip:"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/show_route_duration"/>

    </LinearLayout>

    <Button

        android:layout_width="match_parent"
        android:background="@android:color/holo_green_dark"
        android:layout_height="wrap_content"
        android:id="@+id/join_route_btn"
        android:textColor="@android:color/white"
        android:onClick="showLoginDialog"
        android:text="Join route"
        android:width="250dp"
        />

</LinearLayout>
